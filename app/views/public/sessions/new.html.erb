<div class = "container">
  <div class = "row">
    <h3 class = "title">ログイン</h3>
  </div>
  <div class = "row">
    <div class = "col-lg-8 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class = "table table-borderless">
        <tr>
          <th><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :password, "パスワード" %></th>
          <td><%= f.password_field :password, class:"form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "ログイン", class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class = "mx-auto">
      <strong class = "h5">会員未登録の方はこちらから</strong>
      <%= link_to "新規登録", new_customer_registration_path, class:"btn btn-primary ml-3" %>
    </div>
  </div>
</div>
