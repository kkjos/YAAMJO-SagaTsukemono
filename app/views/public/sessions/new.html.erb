<div class = "container">
  <h3>ログイン</h3>
  <div class = "row">
    <div class = "col-lg-8 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class = "table table-borderless">
        <tr>
          <th><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :password, "パスワード" %></th>
          <td><%= f.password_field :password, class:"form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "ログイン", class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class = "col-lg-6 mx-auto">
      <span>会員登録をご希望の方はこちら</span>
      <%= link_to "新規登録", new_customer_registration_path, class:"btn btn-primary ml-3" %>
    </div>
  </div>
</div>
