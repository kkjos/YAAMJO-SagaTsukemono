<div class = "container">
  <div class = "row mt-5">
    <h3 class = "title">ログイン</h2>
    <%= render "public/shared/error_messages", resource: resource %>
  </div>
  <div class = "row mt-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class = "table table-borderless">
      <tr class = "field">
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></td>
      </tr>
      <tr class = "field">
        <th><%= f.label :password, "パスワード" %></th>
        <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></td>
      </tr>
      <tr class = "actions">
        <th></th>
        <td><%= f.submit "ログイン", class:"btn btn-success" %></td>
      </tr>
      <% end %>
    </table>
    <div class="row mt-5">
      <span>会員登録をご希望の方はこちら</span>
      <%= link_to "新規登録", new_customer_registration_path, class:"btn btn-primary ml-3" %>
    </div>
  </div>
</div>
