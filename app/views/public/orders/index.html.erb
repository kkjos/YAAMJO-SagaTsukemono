<h3>注文履歴一覧</h3>

<div>
  <table>
    <tr>
      <th>注文日</th>
      <th>宛先名</th>
      <th>数量</th>
      <th>合計金額</th>
      <th></th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %> </td>
      <td><%= order.name %> </td>
      <td><%= order.order_details.sum(:amount) %> </td>
      <td><%= order.total_payment %> </td>
      <td><%= link_to "詳細へ", order_path(order) %></td>
    </tr>
    <% end %>
  </table>
</div>