<div class = "container">
  <div class = "row">
    <h3 class = "title mt-5">注文履歴一覧</h3>
  </div>
  <div class = "row">
    <table class = "table table-bordered">
      <tr class="active" style="background-color:rgba(213,219,219,0.50);">
        <th class = "text-center">注文日</th>
        <th class = "text-center">宛先名</th>
        <th class = "text-center">合計数量</th>
        <th class = "text-center">合計金額</th>
        <th></th>
      </tr>
      <% @orders.each do |order| %>
        <tr class = "bg-white">
          <td class = "text-center"><%= order.created_at.strftime('%Y/%m/%d') %> </td>
          <td class = "text-center"><%= order.name %> </td>
          <td class = "text-center"><%= order.order_details.sum(:amount) %> </td>
          <td class = "text-center"><%= order.total_payment %> </td>
          <td class = "text-center"><%= link_to "詳細へ", order_path(order), class: "btn btn-info btn-sm" %></td>
        </tr>
      <% end %>
    </table>
    <div>
      <%= paginate @orders %>
    </div>
  </div>
</div>