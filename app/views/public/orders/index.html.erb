<div class = "container">
  <div class = "row">
    <h3 class = "title">注文履歴一覧</h3>
  </div>
  <div class = "row">
    <div class = "col-lg-8 mx-auto">
      <table class = "table table-bordered">
        <tr class="active" style="background-color:rgba(213,219,219,0.50);">
          <th class = "col-1 text-center">注文日</th>
          <th class = "col-2 text-center">宛先名</th>
          <th class = "col-1 text-center">数量</th>
          <th class = "col-2 text-center">合計金額</th>
          <th class = "col-2"></th>
        </tr>
        <% @orders.each do |order| %>
          <tr class = "bg-white">
            <td class = "text-center"><%= order.created_at.strftime('%Y/%m/%d') %> </td>
            <td class = "text-center"><%= order.name %> </td>
            <td class = "text-center"><%= order.order_details.sum(:amount) %> </td>
            <td class = "text-center"><%= order.total_payment %> </td>
            <td class = "text-center"><%= link_to "詳細を見る", order_path(order), class: "btn btn-info btn-sm" %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div>
      <%= paginate @orders %>
    </div>
  </div>
</div>