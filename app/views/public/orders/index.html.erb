<div class = "container">
  <div class = "row">
    <h3 class = "title">注文履歴一覧</h3>
  </div>
  <% if @orders.present? %>
    <div class = "row">
      <div class = "col-lg-8 mx-auto">
        <table class = "table table-bordered text-center">
          <tr style="background-color:rgba(213,219,219,0.50);">
            <th class = "col-1">注文日</th>
            <th class = "col-2">宛先名</th>
            <th class = "col-1">数量</th>
            <th class = "col-2">合計金額</th>
            <th class = "col-2"></th>
          </tr>
          <% @orders.each do |order| %>
            <tr class = "bg-white">
              <td><%= order.created_at.strftime('%Y/%m/%d') %> </td>
              <td><%= order.name %> </td>
              <td><%= order.order_details.sum(:amount) %> </td>
              <td><%= order.total_payment %>円</td>
              <td><%= link_to "詳細を見る", order_path(order), class: "btn btn-info btn-sm" %></td>
            </tr>
          <% end %>
        </table>
      </div>
      <div>
        <%= paginate @orders %>
      </div>
    </div>
  <% else %>
    <h5 class = "text-center">現在注文履歴はありません。</h5>
  <% end %>
</div>