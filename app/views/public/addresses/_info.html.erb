<%= form_with model:address, url:addresses_path, local:true do |f| %>
  <%= render 'layouts/error_messages', resource: f.object %>
  <%= f.hidden_field :customer_id, value:current_customer.id %>
  <table class = "table table-borderless border bg-white">
    <tr>
      <th>
        <%= f.label :name, "宛先名" %>
        <small class = "text-secondary">(セイ)(メイ)</small>
      </th>
      <td><%= f.text_field :name, autofocus: true, class:"form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :postal_code, "郵便番号" %></th>
      <td><%= f.text_field :postal_code, class:"form-control" %></td>
    </tr>
    <tr>
      <th>
        <%= f.label :address, "住所" %>
        <small class = "text-secondary">(マンション名含む)</small>
      </th>
      <td><%= f.text_field :address, class:"form-control" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "登録する", class: "btn btn-success" %></td>
    </tr>
  </table>
<% end %>