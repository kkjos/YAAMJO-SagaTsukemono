<%= form_with model:address, url:addresses_path, local:true do |f| %>
  <%= f.hidden_field :customer_id, value:current_customer.id %>
  <table class = "table table-borderless border">
    <tr>
      <th><%= f.label :name, "宛先名" %></th>
      <td><%= f.text_field :name, class:"form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :postal_code, "郵便番号" %></th>
      <td><%= f.text_field :postal_code, class:"form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :address, "住所" %></th>
      <td><%= f.text_field :address, class:"form-control" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "登録する", class: "btn btn-success" %></td>
    </tr>
  </table>
<% end %>