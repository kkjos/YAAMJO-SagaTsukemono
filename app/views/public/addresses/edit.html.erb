<div class = "container">
  <div class = "row">
    <h3>宛先変更</h3>
  </div>
  <div class = "row">
    <div class = "col-md-12 col-lg-8 mx-auto">
      <%= form_with model:@address, url:address_path, local:true do |f| %>
      <table class = "table table-borderless">
        <tr>
          <th>
            <%= f.label :name, "宛先名" %>
            <small class = "text-secondary">(セイ)(メイ)</small>
          </th>
          <td><%= f.text_field :name, autofocus: true, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :postal_code, "郵便番号" %></th>
          <td><%= f.text_field :postal_code, class:"form-control" %></td>
        </tr>
        <tr>
          <th>
            <%= f.label :address, "住所" %>
            <small class = "text-secondary">(マンション名含む)</small>
          </th>
          <td><%= f.text_field :address, class:"form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "変更する", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>