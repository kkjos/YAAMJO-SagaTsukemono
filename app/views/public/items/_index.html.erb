  <div class = "row border-bottom h5">
    <small>原菜別で見る</small>
    <% materials.each do |material| %>
      <%= link_to items_search_path(:id=> material.id) do %>
          <span class = "btn btn-secondary ml-1"><%= material.name %></span>
      <% end %>
    <% end %>
  </div>
  <div class="row mt-2">
    <% items.each do |item| %>
      <div class = "col-lg-6 mb-5 d-flex">
        <div><%= attachment_image_tag item, :image, size: "240x180" %></div>
        <div class = "ml-1 py-3">
          <h4 class ="mb-3"><%= item.name %></h4>
          <table class = "ml-3">
            <tr>
              <th>原菜:</th>
              <td><%= item.material.name %></td>
            </tr>
            <tr>
              <th>内容:</th>
              <td><%= item.capacity %></td>
            </tr>
            <tr>
              <th>価格:</th>
              <td><%= item.price %>円<small>（税込<%= item.with_tax_price %>円）</small></td>
            </tr>
            <tr>
              <th></th>
              <td><%= link_to "詳細へ", item_path(item), class: "btn btn-primary" %></td>
            </tr>
          </table>
        </div>
      </div>
    <% end %>
  </div>
  <div>
    <%= paginate items %>
  </div>