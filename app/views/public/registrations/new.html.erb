<div class = "container">
  <div class = "row mt-5">
    <h3 class = "title">新規会員登録</h3>
  </div>
  <div class = "row">
    <div class = "col-8 offset-2">
      <%= form_for(resource, as: resource_name, url:customer_registration_path) do |f| %>
      <%= render 'layouts/error_messages', resource: f.object %>
      <table class = "table table-borderless">
        <tr class = "field">
          <th>
            <%= f.label :name, "名前" %>
            <small class = "text-secondary">(姓)(名)</small>
          </th>
          <td><%= f.text_field :last_name, autofocus: true, class:"form-control" %></td>
          <td><%= f.text_field :first_name, class:"form-control" %></td>
        </tr>
        <tr class = "field">
          <th>
            <%= f.label :name_kana, "カナ" %>
            <small class = "text-secondary">(セイ)(メイ)</small>
          </th>
          <td><%= f.text_field :last_name_kana, class:"form-control" %></td>
          <td><%= f.text_field :first_name_kana, class:"form-control" %></td>
        </tr>
        <tr class = "field">
          <th><%= f.label :email, "メールアドレス" %></th>
          <td><%= f.email_field :email, class:"form-control" %></td>
          <td></td>
        </tr>
        <tr class = "field">
          <th><%= f.label :postal_code, "郵便番号" %></th>
          <td><%= f.text_field :postal_code, class:"form-control" %></td>
        </tr>
        <tr class = "field">
          <th>
            <%= f.label :address, "住所" %>
            <small class = "text-secondary">(マンション名含む)</small>
          </th>
          <td><%= f.text_field :address, class:"form-control" %></td>
        </tr>
        <tr class = "field">
          <th><%= f.label :telephone_number, "電話番号" %></th>
          <td><%= f.text_field :telephone_number, class:"form-control" %></td>
        </tr>
        <tr class = "field">
          <th>
            <%= f.label :password, "パスワード" %>
            <small class = "text-secondary">
              <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
              <% end %>
            </small>
          </th>
          <td><%= f.password_field :password, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :password_confirmation, "パスワード確認" %></th>
          <td><%= f.password_field :password_confirmation, class:"form-control" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "登録", class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class = "col-6 offset-3">
      <span>すでに会員登録済みに方はこちら</span>
      <%= link_to "ログイン", new_customer_session_path, class:"btn btn-primary ml-3" %>
    </div>
  </div>
</div>