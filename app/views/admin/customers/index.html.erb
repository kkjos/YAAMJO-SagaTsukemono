<div class = "container">
  <div class = "row">
    <h3 class = "title">会員一覧</h3>
  </div>
  <div class = "row">
    <div class = "col">
      <table class = "table table-bordered text-center">
        <tr style="background-color:rgba(213,219,219,0.50);">
          <th class = "col-1"><%= sort_order "id", "会員番号" %></th>
          <th class = "col-2"><%= sort_order "last_name", "名前" %></th>
          <th class = "col-3"><%= sort_order "last_name_kana", "フリガナ" %></th>
          <th class = "col-2"><%= sort_order "telephone_number", "電話番号" %></th>
          <th class = "col-2"><%= sort_order "is_deleted", "会員ステータス" %></th>
          <th class = "col-2"></th>
        </tr>
        <% @customers.each do |customer| %>
          <tr class = "bg-white">
            <td><%= customer.id %></td>
            <td><%= customer.last_name %><%= customer.first_name %><small>さん</small></td>
            <td><%= customer.last_name_kana %><%= customer.first_name_kana %><small>さん</small></td>
            <td><%= customer.telephone_number %></td>
            <% if customer.is_deleted? %>
            <td class = "text-danger">退会済</td>
            <% else %>
            <td class = "text-success">有効</td>
            <% end %>
            <td><%= link_to "詳細へ", admin_customer_path(customer.id), class: "btn btn-info btn-sm text-center" %></td>
          </tr>
        <% end %>
      </table>
      <div>
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>