<h3>会員一覧</h3>

<div>
  <table>
    <tr>
      <th>会員番号</th>
      <th>名前</th>
      <th>フリガナ</th>
      <th>電話番号</th>
      <th>会員ステータス</th>
      <th></th>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.last_name %><%= customer.first_name %></td>
      <td><%= customer.last_name_kana %><%= customer.first_name_kana %></td>
      <td><%= customer.telephone_number %></td>
      <% if customer.is_deleted? %>
      <td>退会済</td>
      <% else %>
      <td>有効</td>
      <% end %>
      <th><%= link_to "詳細へ", admin_customer_path(customer.id) %></th>
    </tr>
    <% end %>
  </table>
</div>