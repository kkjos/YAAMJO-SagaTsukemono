<div class="container">
  <div class="row">
    <h3 class = "title mt-5">原菜一覧・追加</h3>
  </div>
  <div class = "row">
    <div class = "col-6">
      <%= form_with model:@material, url:admin_materials_path,local:true do |f| %>
      <%= render 'layouts/error_messages', resource: f.object %>
        <div class="form-group form-inline">
          <%= f.label :name, "原菜名" %>
          <%= f.text_field :name, class: "form-control ml-2" %>
        </div>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-6">
      <table class="table table-bordered">
        <tr class="active" style="background-color:rgba(213,219,219,0.50);">
          <th>原菜</th>
          <th></th>
        </tr>
        <% @materials.each do |material| %>
          <tr>
            <td class = "col-4"><%= material.name %></td>
            <td class = "col-2">
              <%= link_to "編集する", edit_admin_material_path(material), class: "btn btn-success btn-sm" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>