<h3>商品詳細</h3>

<div>
  <%= attachment_image_tag @item, :image, :fill, 300, 300 %>
</div>
<div>
  <table>
    <th>
      <th>商品名</th>
      <td><%= @item.name %></td>
    </th>
    <th>
      <th>商品説明</th>
      <td><%= @item.introduction %></td>
    </th>
    <th>
      <th>税抜き価格</th>
      <td><%= @item.price %></td>
    </th>
    <th>販売ステータス</th>
    <% if @item.is_active %>
      <td>販売中</td>
    <% else %>
      <td>販売停止中</td>
    <% end %>
  </table>
</div>
<%= link_to "商品編集へ",edit_admin_item_path %>
<%= link_to "商品一覧へ",admin_items_path %>