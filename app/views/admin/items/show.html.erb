<div class = "container">
  <div class = "row">
    <h3 class = "title">商品詳細</h3>
  </div>
  <div class = "row">
    <div class = "col-lg-5">
      <div style="text-align: center">
        <%= attachment_image_tag @item, :image, :fill, 350, 350, fallback: "no_image.png", size: '350x350' %>
      </div>
    </div>
    <div class = "col-lg-6 mx-auto">
      <h2 class = "mb-3"><%= @item.name %></h2>
      <div class = "ml-3">
        <table class = "table table-borderless h5">
          <tr>
            <th class = "col-2">原菜</th>
            <td class = "col-4"><%= @item.material.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>内容量</th>
            <td><%= @item.capacity %></td>
          </tr>
          <tr>
            <th>税込価格</th>
            <td><%= @item.with_tax_price %>円<small>（本体価格<%= @item.price %>円）</small></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <% if @item.is_active %>
                <h4 class = "text-success">販売中</h4>
              <% else %>
                <h4 class = "text-danger">販売停止中</h4>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to "商品編集へ",edit_admin_item_path, class: "btn btn-success btn-lg" %></td>
            <td><%= link_to "商品一覧へ",admin_items_path, class: "btn btn-info btn-lg ml-3" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>