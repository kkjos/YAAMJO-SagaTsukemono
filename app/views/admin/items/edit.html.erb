<div class = "container">
  <div class = "row">
    <h3 class = "title mt-5">商品編集</h3>
  </div>
  <div class = "row">
    <div class = "col-8 offset-2">
      <%= form_with model:@item, url:admin_item_path do |f| %>
        <table class = "table table-borderless">
          <tr class = "field">
            <th><%= f.label :image, "画像" %></th>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr class = "field">
            <th><%= f.label :name, "商品名" %></th>
            <td><%= f.text_field :name,autocomplete: "商品名",class: "form-control" %></td>
          </tr>
          <tr class = "field">
            <th><%= f.label :introduction, "商品説明" %></th>
            <td><%= f.text_area :introduction, rows:"5", autocomplete: "商品説明",class: "form-control" %></td>
          </tr>
          <tr class = "field">
            <th><%= f.label :price, "税抜き価格" %></th>
            <td><%= f.text_field :price, autocomplete: "価格",class: "form-control" %></td>
          </tr>
          <tr class = "field">
            <th><%= f.label :is_active, "販売ステータス" %></th>
            <td>
              <div class = "radio_button">
                <%= f.radio_button :is_active, 'true' %>
                <%= f.label :is_active, '販売中', value: true %>
              </div>
              <div class = "radio_button">
                <%= f.radio_button :is_active, 'false' %>
                <%= f.label :is_active, '販売停止中', value: false %>
              </div>
            </td>
          </tr>
          <tr class = "actions">
            <th></th>
            <td><%= f.submit "登録する", class: "btn btn-success" %></td>
            <td><%= link_to "商品詳細に戻る", admin_item_path(@item), class: "btn btn-info" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>