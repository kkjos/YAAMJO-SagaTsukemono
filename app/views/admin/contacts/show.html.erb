<div class = "container">
  <div class = "row">
    <h3 class = "title">お問い合わせ詳細</h3>
  </div>
  <div class = "row">
    <div class = "col-lg-8 mx-auto">
      <table class = "table table-borderless border bg-white">
        <tr>
          <th>お問い合わせ内容</th>
          <td><%= @contact.message %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class = "col-lg-8 mx-auto">
      <table class = "table table-borderless border bg-white">
        <tr>
          <th>日付</th>
          <td><%= @contact.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @contact.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @contact.email %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @contact.telephone_number %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "お問い合わせ一覧へ", admin_contacts_path, class: "btn btn-info" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
